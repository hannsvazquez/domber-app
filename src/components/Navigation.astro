<nav class="bg-white w-full border-b border-black/10">
  <div class="max-w-6xl mx-auto flex items-center justify-between py-6 px-4">
    {/* Logo */}
    <img src="/logo_domber_app.svg" alt="Domber Logo" class="h-10 w-auto" />
    {/* Burger menu button for mobile */}
    <button id="burger" class="md:hidden flex items-center px-2 py-1" aria-label="Open menu" onclick="document.getElementById('nav-menu').classList.toggle('hidden')">
      <svg class="h-8 w-8 text-primary" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
        <line x1="3" y1="12" x2="21" y2="12" />
        <line x1="3" y1="6" x2="21" y2="6" />
        <line x1="3" y1="18" x2="21" y2="18" />
      </svg>
    </button>
    {/* Navigation Links */}
    <ul id="nav-menu" class="hidden md:flex gap-8 items-center absolute md:static top-20 left-0 w-full md:w-auto bg-white md:bg-transparent px-4 md:px-0 py-4 md:py-0 z-20 shadow md:shadow-none">
      <li>
        <a href="#" class="font-sans font-medium text-xl text-primary">Inicio</a>
      </li>
      <li>
        <a href="#listado" class="font-sans font-medium text-xl text-primary">Lista de servicios</a>
      </li>
      <li>
        <a href="#cities" class="font-sans font-medium text-xl text-primary">Ciudades</a>
      </li>
      <li>
        <a href="#" class="font-sans font-medium text-xl text-primary">Beneficios</a>
      </li>
      <li class="mt-4 md:mt-0">
        <a href="#" class="ml-0 md:ml-6 px-5 py-2 rounded-md font-sans text-lg font-semibold block text-center btn-waitlist">
          WaitList
        </a>
      </li>
    </ul>
  </div>
  <script>
    // Simple burger menu toggle for Astro (vanilla JS)
    document.getElementById('burger').addEventListener('click', function() {
      document.getElementById('nav-menu').classList.toggle('hidden');
    });
  </script>
</nav>
